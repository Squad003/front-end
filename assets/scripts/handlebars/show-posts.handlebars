{{#each blogposts as |blogpost|}}
<div class="chore-container">
  <div class="row row-centered">
    <div class="col-xs-4 col-centered box">
      <div class="content-{{chore.id}} content chore-name">title: {{blogpost.title}} </div>
    </div>
    <div class="col-xs-4 col-centered box">
      <div class="content-{{chore.id}} content chore-due">body: {{blogpost.content}}</div>
    </div>
    <div class="col-xs-4 col-centered box complete-chore">
  <button type="button" class="delete-post-button btn btn-success" data-id="{{blogpost._id}}">Delete-ja</button>
</div>
  </div>

  {{/each}}
